	<!-- 手机淘宝/闲鱼/一淘/特价版/... -->
	<prescription type="broadcast" package="com.taobao.*" >
		<intent-filter>
			<action name="android.intent.action.PACKAGE_ADDED" />
			<action name="android.intent.action.PACKAGE_REPLACED" />
			<action name="android.intent.action.PACKAGE_CHANGED" />
			<action name="android.intent.action.PACKAGE_REMOVED" />
			<action name="android.intent.action.PACKAGE_FULLY_REMOVED" />
		</intent-filter>
	</prescription>
